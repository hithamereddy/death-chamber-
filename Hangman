import random

name=input("name: ")

words=['rainbow', 'computer', 'science', 'programming',
         'python', 'water', 'board', 'table', 'chocolate']

word = random.choice(words)
print("guess the word's characters: ")

guesses = ''
turns = 1

while turns > 0:
    failed = 0
    for char in word:
        if char in guesses:
            print(char)
        else:
            print("_")
            failed += 1
    if failed == 0:
        print("legendary play âš–")
        print("the word was", word)
        break

    guess = input("guess a character :")
    guesses += guess

    if guess not in word:

        turns -= 1

        print("incorrect")
        print("you have", +turns, 'more more guesses')

        if turns == 0:
            print("ur bad loser ğŸ‘½")
